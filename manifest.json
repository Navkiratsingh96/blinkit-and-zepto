{
  "manifest_version": 3,
  "name": "Universal Food Tracker",
  "version": "13.0",
  "description": "Track Zepto, Blinkit, and Swiggy spending.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "*://*.zepto.com/*", 
    "*://*.zeptonow.com/*",
    "*://*.blinkit.com/*",
    "*://*.swiggy.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
